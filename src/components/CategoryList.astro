---
type Props = {
  categories: string[];
  title?: string;
};

const { categories, title } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {title && <h4 class="font-semibold">{title}:</h4>}
  <ul class="flex flex-wrap gap-2">
    {
      categories.map((category) => (
        <li class="m-0" data-tag={category}>
          <a class="rounded-md border border-current px-1.5 pb-0.5 text-xs uppercase tracking-wider !no-underline hover:bg-fujo-purple/5">
            {category}
          </a>
        </li>
      ))
    }
  </ul>
</div>
