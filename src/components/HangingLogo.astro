---
import { readFileSync } from "node:fs";
// style="--color-neon-glow: #ffbf00; --color-neon-fill: white; --color-neon-inner-glow:#f6d880;"

const lemonLogoSvg = readFileSync("./src/images/lemon-logo.svg", {
  encoding: "utf8",
});
const llcSvg = readFileSync("./src/images/LLC.svg", {
  encoding: "utf8",
});

const wordLogoSvg = readFileSync("./src/images/word-logo.svg", {
  encoding: "utf8",
});
---

<a class="hanging-container z-40 hover:cursor-pointer" href="/">
  <div class="lemon">
    <Fragment set:html={lemonLogoSvg} />
  </div>
  <div class="logo">
    <Fragment set:html={wordLogoSvg} />
  </div>
  <div class="llc">
    <Fragment set:html={llcSvg} />
  </div>
</a>

<style>
  /* Leaving this here, just commented out for now because it performs more smoothly than my js crimes, so we might want to use it for those who do have support for it
  @supports (animation-timeline: scroll()) {
    .lemon,
    .logo,
    .llc {
      animation: pullup linear both;
      animation-timeline: scroll();
    }
  } */

  .hanging-container {
    position: fixed;
    width: 200px;
    height: 200px;
    top: 0;
    left: 50%;
    transform: translateX(calc(-50% - 5px));
    --rope-color: #d9d9d944;
    --lemon-final-position: -300px;
    --logo-final-position: -400px;
  }
  .lemon {
    width: 80px;
    position: absolute;
    height: auto;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    --translate-x: -50%;
    --final-position: var(--lemon-final-position);
    animation-range: entry 0% exit 30%;
    --color-neon-glow: #ffbf00;
    --color-neon-fill: white;
    --color-neon-inner-glow: #f6d880;
  }
  .lemon :global(svg) {
    width: 100%;
    height: auto;
  }
  .lemon::before {
    content: "";
    position: absolute;
    top: -1000px;
    bottom: 67px;
    left: 15px;
    width: 2px;
    background-color: var(--rope-color);
    z-index: -1;
  }
  .lemon::after {
    content: "";
    position: absolute;
    top: -1000px;
    bottom: 42px;
    right: 18px;
    width: 2px;
    background-color: var(--rope-color);
    z-index: -1;
  }

  .logo {
    width: 190px;
    position: absolute;
    height: auto;
    top: 90px;
    left: 50%;
    transform: translateX(-50%);
    --translate-x: -50%;
    --final-position: var(--logo-final-position);
    animation-range: entry 0% exit 30%;
    --color-neon-glow: #d529ff;
    --color-neon-fill: #d529ff;
    --color-neon-inner-glow: #d529ff;
    --stroke-strength: 1.5;
    --glow-strength: 5.4;
    --inner-glow-strength: 0.3;
  }
  .logo :global(svg) {
    width: 100%;
    height: auto;
    transform: rotate(356deg);
  }
  .logo::before {
    content: "";
    position: absolute;
    top: -1000px;
    bottom: 25px;
    left: 21px;
    width: 2px;
    background-color: var(--rope-color);
    z-index: -1;
  }
  .logo::after {
    content: "";
    position: absolute;
    top: -1000px;
    bottom: 47px;
    right: 13px;
    width: 2px;
    background-color: var(--rope-color);
    z-index: -1;
  }
  .llc {
    width: 45px;
    position: absolute;
    height: auto;
    top: 136px;
    right: 7px;
    --translate-x: 0;
    --final-position: var(--logo-final-position);
    animation-range: entry 0% exit 30%;
    --color-neon-glow: #4360f7;
    --color-neon-fill: #4360f7;
    --color-neon-inner-glow: #4360f7;
    --stroke-strength: 1.5;
    --glow-strength: 5.4;
    --inner-glow-strength: 0.3;
  }
  .llc :global(svg) {
    width: 100%;
    height: auto;
    transform: rotate(2deg);
  }
  .llc::before {
    content: "";
    position: absolute;
    top: -13px;
    bottom: 15px;
    left: 6px;
    width: 2px;
    background-color: var(--rope-color);
    z-index: -1;
  }
  .llc::after {
    content: "";
    position: absolute;
    top: -13px;
    bottom: 13px;
    right: 10px;
    width: 2px;
    background-color: var(--rope-color);
    z-index: -1;
  }
  @keyframes pullup {
    from {
      transform: translate(var(--translate-x, 0), 0px);
    }
    to {
      transform: translate(var(--translate-x, 0), var(--final-position));
    }
  }
</style>

<script>
  const prefersReducedMotion = window.matchMedia(
    `(prefers-reduced-motion: reduce)`
  ).matches;
  const THRESHOLD = 200;
  const RATE_DIVISOR = 600;
  const lemonElement = document.querySelector<HTMLElement>(".lemon");
  const lemonFinalPosition = -400;
  const lemonRate = lemonFinalPosition / RATE_DIVISOR;
  const logoElement = document.querySelector<HTMLElement>(".logo");
  const llcElement = document.querySelector<HTMLElement>(".llc");
  const logoFinalPosition = -600;
  const logoRate = logoFinalPosition / RATE_DIVISOR;
  const container =
    document.querySelector<HTMLDivElement>(".hanging-container");
  const containerFinalPosition = -600;
  const containerRate = containerFinalPosition / RATE_DIVISOR;

  if (!lemonElement || !logoElement || !llcElement || !container) {
    throw new Error("Hanging logo elements not found");
  }

  const lemon: HTMLElement = lemonElement;
  const logo: HTMLElement = logoElement;
  const llc: HTMLElement = llcElement;
  const containerDiv: HTMLDivElement = container;

  let lastScrollPosition = window.scrollY;
  let animationFrameId: number | null = null;
  let isInitialized = false;
  let hasShownLogo = false; // Track if we've ever shown the logo
  let currentOpacity = "0"; // Track current opacity to avoid redundant style changes

  // Hide logo initially
  containerDiv.style.opacity = "0";

  // Use will-change for better performance
  containerDiv.style.willChange = "opacity, transform";
  lemon.style.willChange = "transform";
  logo.style.willChange = "transform";
  llc.style.willChange = "transform";

  function setPosition(currentScrollY: number) {
    // Early exit if we're far past the threshold and were already past it
    if (currentScrollY > THRESHOLD && lastScrollPosition > THRESHOLD) {
      return;
    }

    if (prefersReducedMotion) {
      const scrollDifference = lastScrollPosition - currentScrollY;
      if (scrollDifference > 0 && currentScrollY < THRESHOLD) {
        lemon.style.translate = `0px 0px`;
        logo.style.translate = `0px 0px`;
        llc.style.translate = `0px 0px`;
        containerDiv.style.translate = `0px 0px`;
      }
      if (scrollDifference < 0) {
        lemon.style.translate = `0px ${lemonFinalPosition}px`;
        logo.style.translate = `0px ${logoFinalPosition}px`;
        llc.style.translate = `0px ${logoFinalPosition}px`;
        containerDiv.style.translate = `0px ${containerFinalPosition}px`;
      }
      return;
    }

    if (currentScrollY > THRESHOLD) {
      // Only update if not already at final position
      if (lemon.style.translate !== `0px ${lemonFinalPosition}px`) {
        lemon.style.translate = `0px ${lemonFinalPosition}px`;
        logo.style.translate = `0px ${logoFinalPosition}px`;
        llc.style.translate = `0px ${logoFinalPosition}px`;
        containerDiv.style.translate = `0px ${containerFinalPosition}px`;
      }
      return;
    }

    // Only update if position actually changed
    const lemonY = lemonRate * currentScrollY;
    const logoY = logoRate * currentScrollY;
    const containerY = containerRate * currentScrollY;

    lemon.style.translate = `0px ${lemonY}px`;
    logo.style.translate = `0px ${logoY}px`;
    llc.style.translate = `0px ${logoY}px`;
    containerDiv.style.translate = `0px ${containerY}px`;
  }

  function initialize() {
    const currentScrollY = window.scrollY;

    lastScrollPosition = currentScrollY;
    setPosition(currentScrollY);
    if (!isInitialized) {
      isInitialized = true;
      // Only show logo if we're near the top
      if (currentScrollY <= THRESHOLD) {
        containerDiv.style.opacity = "1";
        currentOpacity = "1";
        hasShownLogo = true;
      } else {
        hasShownLogo = false;
      }
    } else {
      // Update lastScrollPosition so we don't trigger false threshold crossing
      lastScrollPosition = currentScrollY;
    }
  }

  function onScroll() {
    if (!isInitialized) {
      initialize();
      return;
    }

    if (animationFrameId !== null) {
      return;
    }

    animationFrameId = requestAnimationFrame(() => {
      const currentScrollY = window.scrollY;
      const wasAboveThreshold = lastScrollPosition <= THRESHOLD;
      const isAboveThreshold = currentScrollY <= THRESHOLD;

      setPosition(currentScrollY);

      // Only change visibility when crossing the threshold (and only if logo was actually shown initially)
      if (
        wasAboveThreshold &&
        !isAboveThreshold &&
        hasShownLogo &&
        currentOpacity !== "0"
      ) {
        containerDiv.style.opacity = "0";
        currentOpacity = "0";
      } else if (
        !wasAboveThreshold &&
        isAboveThreshold &&
        currentOpacity !== "1"
      ) {
        containerDiv.style.opacity = "1";
        currentOpacity = "1";
        hasShownLogo = true;
      }

      lastScrollPosition = currentScrollY;
      animationFrameId = null;
    });
  }

  document.addEventListener("scroll", onScroll, { passive: true });

  // Try to initialize as soon as possible
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initialize);
  } else {
    initialize();
  }

  // Also initialize on load in case scroll position changes
  window.addEventListener("load", initialize);
</script>
