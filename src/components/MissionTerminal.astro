<style>
  div::before {
    /* background: linear-gradient(180deg, #ff21e9 0%, #4360f7 100%); */
    background: radial-gradient(circle at center, #ff21e9, #4360f7);
    background-size: 500% 500%;
    content: "";
    position: absolute;
    top: -3px;
    left: -3px;
    right: -3px;
    bottom: -3px;
    z-index: -1;
    /* @apply rounded-xl; */
    border-radius: calc(0.75rem + 4px);
  }

  h2 {
    text-shadow:
      1px 1px 2px #ff21e933,
      -1px 1px 2px #ff21e933,
      -1px -1px 2px #ff21e933,
      1px -1px 2px #ff21e933;
  }
  p:first-of-type {
    text-shadow:
      1px 1px 3px #a7ff9033,
      -1px 1px 3px #a7ff9033,
      -1px -1px 3px #a7ff9033,
      1px -1px 3px #a7ff9033;
  }
  p:nth-of-type(2) {
    text-shadow:
      1px 1px 3px #ffffff33,
      -1px 1px 3px #ffffff33,
      -1px -1px 3px #ffffff33,
      1px -1px 3px #ffffff33;
  }

  @media (prefers-reduced-motion: no-preference) {
    div::before {
      animation: gradient 12s ease infinite;
    }

    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
  }
</style>
