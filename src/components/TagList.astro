---
import { Icon } from 'astro-icon/components';

type Props = {
  tags: string[];
  title?: string;
}

const { tags, title } = Astro.props;
---

<div class="flex flex-wrap gap-1">
  {title && <h4 class="font-semibold">{title}:</h4>}
  <ul class="flex flex-wrap gap-4">
    {tags.map((tag) => (
      <li
        class="m-0 opacity-50"
        data-tag={tag}
      >
        <a class="!no-underline hover:!underline" href="#">
          <Icon name="lucide:hash"
        class="inline text-2xl font-bold  w-4"
        aria-label={"close menu"} />
          {tag}
        </a>
      </li>
    ))}
  </ul>
</div>