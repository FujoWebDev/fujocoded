    <style>
      body {
        background-color: #f6d880;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        margin: 0;
        /* background-image: url("https://as2.ftcdn.net/v2/jpg/02/39/31/53/1000_F_239315313_RTpKCbEPulGCsYWR8A0wJalKFvD21eBI.jpg"); */
      }

      main {
        width: 300px;
        color: transparent;
      }

      .background {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 20%;
        right: 20%;
        background-color: #ffd3f0;
        z-index: -1;
      }
      :root {
        --color-neon-glow: #ffbf00;
        --color-neon-fill: #f3e5bc;
        --color-neon-inner-glow: #f7de94;
      }

      form {
        display: flex;
        align-items: center;
        gap: 5px;
        max-width: 100%;
        margin: 0 20px;
        padding-inline: 10px;
      }
      input[type="email"] {
        height: 40px;
        width: 300px;
        max-width: 100%;
        border-radius: 15px;
        border: 3px solid black;
        padding: 11px;
      }

      input[type="submit"] {
        height: 40px;
        border-radius: 15px;
        border: 3px solid black;
        padding: 0 11px;
        font-weight: 600;
        background-color: #f0be28;
      }
      input[type="submit"]:hover {
        cursor: pointer;
        background-color: #f0ae28;
      }

      .socials {
        margin-top: 25px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
      }

      .socials a {
        flex-shrink: 0;
        display: flex;
      }
      .shiny-font {
        color: #fffcf4;
        font-size: 40px;
        font-family: "hatch";
        font-style: italic;
        text-shadow:
          0 0 6px #f6d880,
          0 0 0px #f6d880,
          0 0 15px #ffbf00,
          0 0 36px #ffbf00;
      }

      .socials img,
      .socials svg {
        display: block;
        height: 50px;
        width: 50px;
        aspect-ratio: 1;
        border: 3px solid black;
        border-radius: 100%;
        color: black;
        flex-shrink: 0;
        padding: 5px;
        max-width: 100%;
      }

      .socials img:hover,
      .socials svg:hover {
        cursor: pointer;
        background-color: #f0ae28;
      }

      @media (max-width: 400px) {
        form {
          flex-direction: column;
        }

        .socials {
          gap: 15px;
        }
        .socials img,
        .socials svg {
          height: 40px;
          width: 40px;
        }
      }

      body img {
        max-width: 50%;
        height: auto;
      }
      * {
        box-sizing: border-box;
      }
    </style>
  </body>
