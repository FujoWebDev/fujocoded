---
import { readFileSync } from "node:fs";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const title = "FujoCoded â€“ Coming April 1st, 2024";
const description = "Not a joke. (Well, ok, a tad bit of a joke.)";
const preview = "http://fujocoded.com/og-image.png";

const lemonLogoSvg = readFileSync("./src/images/lemon-logo.svg", {
  encoding: "utf8",
});
const wordLogoSvg = readFileSync("./src/images/text-logo.svg", {
  encoding: "utf8",
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="twitter:title" content={title} />

    <meta name="description" content={description} />
    <meta property="og:description" content={description} />
    <meta property="twitter:description" content={description} />

    <meta property="og:image" content={preview} />
    <meta name="twitter:image" content={preview} />

    <meta property="twitter:card" content="summary_large_image" />
    <link rel="stylesheet" href="https://use.typekit.net/ruy6yjo.css" />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="favicons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="favicons/favicon-16x16.png"
    />
    <link rel="manifest" href="favicons/site.webmanifest" />
    <link
      rel="mask-icon"
      href="favicons/safari-pinned-tab.svg"
      color="#f6d880"
    />
    <link rel="shortcut icon" href="favicons/favicon.ico" />
    <meta name="msapplication-TileColor" content="#f6d880" />
    <meta name="msapplication-config" content="favicons/browserconfig.xml" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body>
    <Fragment set:html={lemonLogoSvg} />
    <!-- <Fragment set:html={wordLogoSvg} /> -->
    <div class="shiny-font">Projects</div>
    <div class="shiny-font">About</div>
    <div class="shiny-font">More</div>
    <div class="shiny-font">Blog</div>
    <div class="background"></div>
    <main>This is the actual text of the page</main>
    <style>
      body {
        background-color: #f6d880;
        display: flex;
        height: 100dvh;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        margin: 0;
        /* background-image: url("https://as2.ftcdn.net/v2/jpg/02/39/31/53/1000_F_239315313_RTpKCbEPulGCsYWR8A0wJalKFvD21eBI.jpg"); */
      }

      .background {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 20%;
        right: 20%;
        background-color: black;
        z-index: -1;
        
      }
      :root {
        --color-neon-glow: #ffbf00;
        --color-neon-fill: #f3e5bc;
       --color-neon-inner-glow: #f7de94;
      }

      form {
        display: flex;
        align-items: center;
        gap: 5px;
        max-width: 100%;
        margin: 0 20px;
        padding-inline: 10px;
      }
      input[type="email"] {
        height: 40px;
        width: 300px;
        max-width: 100%;
        border-radius: 15px;
        border: 3px solid black;
        padding: 11px;
      }

      input[type="submit"] {
        height: 40px;
        border-radius: 15px;
        border: 3px solid black;
        padding: 0 11px;
        font-weight: 600;
        background-color: #f0be28;
      }
      input[type="submit"]:hover {
        cursor: pointer;
        background-color: #f0ae28;
      }

      .socials {
        margin-top: 25px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
      }

      .socials a {
        flex-shrink: 0;
        display: flex;
      }
      .shiny-font {
        color: #fffcf4;
    font-size: 40px;
    font-family: "hatch";
    font-style: italic;
    text-shadow: 0 0 6px #f6d880, 0 0 0px #f6d880, 0 0 15px #ffbf00, 0 0 36px #ffbf00;
}
      }

      .socials img,
      .socials svg {
        display: block;
        height: 50px;
        width: 50px;
        aspect-ratio: 1;
        border: 3px solid black;
        border-radius: 100%;
        color: black;
        flex-shrink: 0;
        padding: 5px;
        max-width: 100%;
      }

      .socials img:hover,
      .socials svg:hover {
        cursor: pointer;
        background-color: #f0ae28;
      }

      @media (max-width: 400px) {
        form {
          flex-direction: column;
        }

        .socials {
          gap: 15px;
        }
        .socials img,
        .socials svg {
          height: 40px;
          width: 40px;
        }
      }

      body img {
        max-width: 50%;
        height: auto;
      }
      * {
        box-sizing: border-box;
      }
    </style>
  </body>
</html>
